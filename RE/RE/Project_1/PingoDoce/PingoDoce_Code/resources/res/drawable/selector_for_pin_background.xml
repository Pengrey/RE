<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_active="true">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="?attr/colorError"/>
            <solid android:color="?attr/colorError"/>
        </shape>
    </item>
    <item android:state_focused="true" android:state_checked="true">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="?attr/colorAccent"/>
            <solid android:color="?attr/colorAccent"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="?android:attr/textColorSecondary"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_checked="true">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="?attr/colorAccent"/>
            <solid android:color="?attr/colorAccent"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="?android:attr/textColorSecondary"/>
            <solid android:color="@android:color/white"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="?android:attr/textColorSecondary"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>
